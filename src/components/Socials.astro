<style lang="scss">
    nav {
        display: flex;
        gap: 1rem;
    }

    [astro-icon] {
        width: 30px;
    }

    a {
        color: var(--clr-fg);
        text-decoration: none;
        display: inline-block;
        transition: all .2s var(--bouncy-cubic);
        filter: brightness(80%);

        &:hover {
            transform: translateY(-2px);
            color: rgb(var(--clr-teal));
            filter: brightness(100%);
        }
    }
</style>