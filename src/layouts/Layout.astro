--- 
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
import '@styles/global.scss';

interface Props {
	title: string;
	description: string
}

const { title, description } = Astro.props;
---

<!DOCTYPE html> 
<html lang="da" data-theme="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<title>{title}</title>
	</head>
	<body class="bg-stone-900 text-white">
		<div class="background-gradient"></div>

		<div class="page-wrapper max-w-5xl mx-auto my-0">
			<Header />

			<slot />

			<Footer />
		</div>
	</body>
</html>

<style is:global lang="scss">
	:root {
		--fontsource-display: optional;
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(45deg, rgb(var(--accent)), rgb(var(--accent-light)) 30%, white 60%);
		--clr-gradient: linear-gradient(45deg, rgb(var(--accent)), rgb(var(--clr-teal)) 30%, var(--clr-white) 60%);
		--site-width: 1000px;
		--clr-white: #EDF0ED;
		--clr-black: #212121;
		--clr-sun: #FCB033;
		--clr-moon: #DCDCDC;
		--clr-teal: 39, 199, 171;
		--accent-orange: radial-gradient(circle at 10% 20%, rgb(252, 251, 121) 0%, rgb(255, 200, 124) 90%);
		--accent-teal: radial-gradient(circle at 10% 20%, rgb(39, 199, 171) 0%, rgb(70, 143, 197) 90%);
		--bouncy-cubic: cubic-bezier(.48, -.38, .41, 1.22);
	}

	[data-theme="light"] {
		--clr-bg: var(--clr-white);
		--clr-fg: var(--clr-black);
	}

	[data-theme="dark"] {
		--clr-bg: var(--clr-black);
		--clr-fg: var(--clr-white);
	}

	body {

	}

	.background-gradient {
		@apply h-4/5 w-full absolute -z-10 opacity-10 blur-3xl;
		background: linear-gradient(
			-15deg,
			transparent 20%,
			rgb(var(--clr-teal)) 60%,
			rgb(70, 143, 197) 80%
		);
	}
</style>
