---
import { Image } from 'astro:assets';
import MakaiTravels from '@assets/website-showcase/makaitravels.png';
import ActivCare from '@assets/website-showcase/activcare.png';

interface Props {
	title: string;
}

const { title } = Astro.props;
---
<h2>// {title}</h2>
<!-- Slider main container -->
<div transition:persist class="swiper">
    <!-- Additional required wrapper -->
    <div class="swiper-wrapper">
        <!-- Slides -->
        <div class="swiper-slide">
            <Image src={MakaiTravels} alt="Makai Travels" />
            <div class="description">
                <h4>Makai Travels</h4>
                <p>
                    Vanilla Wordpress hjemmeside baseret på temaet Flatsome.
                </p>
            </div>
        </div>
        <div class="swiper-slide">
            <Image src={ActivCare} alt="ActivCare" />
            <div class="description">
                <h4>ActivCare</h4>
                <p>
                    Vanilla Wordpress hjemmeside baseret på temaet Flatsome.
                </p>
            </div>
        </div>
    </div>
    <!-- If we need pagination -->
    <!-- <div class="swiper-pagination"></div> -->

    <!-- If we need navigation buttons -->
    <div class="swiper-button-prev"></div>
    <div class="swiper-button-next"></div>

    <!-- If we need scrollbar -->
    <!-- <div class="swiper-scrollbar"></div> -->
</div>

<style>
    .swiper {
        width: 100%;
        height: 500px;
        border-radius: 7px;
    }

    .swiper-slide img {
        height: 100%;
        width: 100%;
    }

    .swiper-slide .description {
        position: absolute;
        right: 0;
        top: 0;
        width: 20%;
        height: 500px;
        z-index: 9999;
        background: rgba(255, 255, 255, .15);
        backdrop-filter: saturate(180%) blur(10px);
        padding: 20px;
        text-align: center;
        color: var(--clr-black);

        > * {
            margin: 0;
        }
    }
</style>

<script>
    import { Swiper } from 'swiper/bundle';
    import 'swiper/css/bundle';

    const swiper = new Swiper('.swiper', {
        loop: true,
        navigation: {
            nextEl: '.swiper-button-next',
            prevEl: '.swiper-button-prev',
        },
        grabCursor: true,
        effect: "creative",
        creativeEffect: {
            prev: {
                shadow: true,
                translate: [0, 0, -400],
            },
            next: {
                translate: ["100%", 0, 0],
            },
        },
    });
</script>