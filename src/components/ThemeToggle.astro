<script>
    const toggles = document.querySelectorAll('.theme-toggle');
    
    toggles.forEach((toggle) => {
        toggle?.addEventListener('click', function (this: HTMLElement, ev: Event) {
            document.getElementById('dark')?.classList.toggle('active', this.id === 'light');
            document.getElementById('light')?.classList.toggle('active', this.id === 'dark');
        });
    });
</script>