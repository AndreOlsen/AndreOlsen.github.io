---
import Layout from "@layouts/Layout.astro";
import Footer from "@components/Footer.astro"
import Icon from "astro-icon";
---

<Layout 
    title="404"
    description="404 - Siden findes ikke."
>
    <main class="px-[5%] flex justify-center items-center">
        <section class="flex flex-col justify-center items-center animate-[fadeInUp_500ms_cubic-bezier(0.645,0.045,0.355,1)_1_300ms_both]">
            <h1 class="text-9xl font-expletus">
                404
            </h1>

            <p class="text-center leading-none">
                siden findes ikke.
            </p>

            <a href="#" id="go-back" class="text-[#FFCB9A] mt-4">
                tilbage
            </a>
        </section>
    </main>
</Layout>

<script>
    document.getElementById('go-back')?.addEventListener('click', function () {
        window.history.go(-1);
    });
</script>