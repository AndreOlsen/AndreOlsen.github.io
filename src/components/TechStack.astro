---
import Icon from 'astro-icon';
---

<section class="tech-stack">
    <h2>// The Stack</h2>

    <div>
        <Icon name="vscode-icons:file-type-html" title="HTML" />
        <Icon name="vscode-icons:file-type-css" title="CSS" />
        <Icon name="vscode-icons:file-type-php3" title="PHP" />
        <Icon name="vscode-icons:file-type-sass" title="SASS/SCSS" />
        <Icon name="vscode-icons:file-type-js-official" title="JavaScript" />
        <Icon name="mdi:jquery" color="#0868AC" title="jQuery" />
        <Icon name="vscode-icons:file-type-blade" title="Laravel" />
        <Icon name="vscode-icons:file-type-cakephp" title="CakePHP" />
        <Icon name="vscode-icons:file-type-mysql" title="SQL" />
        <Icon name="vscode-icons:file-type-git" title="GIT" />
        <Icon name="vscode-icons:file-type-npm" title="NPM (Node Package Manager)" />
        <Icon name="vscode-icons:file-type-node" title="NodeJS" />
        <Icon name="mdi:wordpress" title="WordPress" color="#2A789D" />
    </div>
</section>

<style lang="scss">
    .tech-stack {
		[astro-icon] {
			width: 60px;
		}

        div {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(21%, 1fr));
            grid-auto-rows: 100px;
            grid-gap: 20px;
            justify-items: center;
        }
	}
</style>