---
import Layout from "@layouts/Layout.astro";
import Icon from "astro-icon";
import { Image } from "astro:assets";
import Milo from "@assets/Milo.jpeg";
import Milo1 from "@assets/Milo1.jpeg";
import Milo2 from "@assets/Milo2.jpeg";
