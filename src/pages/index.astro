---
import Layout from '@layouts/Layout.astro';
import HeroLayout from '@layouts/HeroLayout.astro';
import Card from '@components/Card.astro';
import Slider from '@components/Slider.astro';
import Socials from '@components/Socials.astro';
import Icon from 'astro-icon';
---

<Layout title="Hello There">
	<main>
		<HeroLayout />

		<Socials />

		<section>
			<h2>// Blog</h2>

			<ul role="list" class="link-card-box">
				<Card
					href="https://docs.astro.build/"
					title="Documentation"
					body="Learn how Astro works and explore the official API docs."
				/>
				<Card
					href="https://astro.build/integrations/"
					title="Integrations"
					body="Supercharge your project with new frameworks and libraries."
				/>
				<Card
					href="https://astro.build/themes/"
					title="Themes"
					body="Explore a galaxy of community-built starter themes."
				/>
			</ul>
		</section>

		<section>
			<h2>// Projekter</h2>
			
			<ul role="list" class="link-card-grid">
				<Card
					href="https://docs.astro.build/"
					title="Documentation"
					body="Learn how Astro works and explore the official API docs."
				/>
				<Card
					href="https://astro.build/integrations/"
					title="Integrations"
					body="Supercharge your project with new frameworks and libraries."
				/>
				<Card
					href="https://astro.build/themes/"
					title="Themes"
					body="Explore a galaxy of community-built starter themes."
				/>
				<Card
					href="https://astro.build/chat/"
					title="Community"
					body="Come say hi to our amazing Discord community. ❤️"
				/>
			</ul>
		</section>

		<section class="tech-stack">
			<h2>// The Stack</h2>

			<div>
				<Icon name="vscode-icons:file-type-html" />
				<Icon name="vscode-icons:file-type-css" />
				<Icon name="vscode-icons:file-type-php3" />
				<Icon name="vscode-icons:file-type-sass" />
				<Icon name="vscode-icons:file-type-js-official" />
				<Icon name="mdi:jquery" color="#0868AC"/>
				<Icon name="vscode-icons:file-type-blade" />
				<Icon name="vscode-icons:file-type-cakephp" />
				<Icon name="vscode-icons:file-type-mysql" />
				<Icon name="vscode-icons:file-type-git" />
				<Icon name="vscode-icons:file-type-npm" />
				<Icon name="vscode-icons:file-type-node" />
			</div>
		</section>

		<Slider title="Mit arbejde" />
	</main>
</Layout>

<style lang="scss">
	.tech-stack {
		[astro-icon] {
			width: 30px;
		}

		h2 {
			margin: 0;
		}
	}

	main {
		max-width: calc(100% - 2rem);
		margin: auto;
		color: var(--clr-white);
		font-size: 1.3rem;
		line-height: 1.6;
	}

	.link-card-grid {
		display: grid;
		gap: 1rem;
		padding: 0;
	}

	.link-card-box {
		display: grid;
		gap: 1rem;
		padding: 0;
		grid-template-columns: repeat(3, 1fr);
	}
</style>
